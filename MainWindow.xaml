<adonisControls:AdonisWindow x:Class="kardseditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kardseditor"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
                  xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
 xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        mc:Ignorable="d"
        Title="KardsEditor" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_文件">
                <MenuItem Header="_Open(打开)" Click="OpenFile"/>
                <MenuItem Header="_Setting(设置)" Click="Setting"/>
                <MenuItem Header="_Save(保存)" Click="Save"/>
                <MenuItem Header="_Zaza(扎扎)" Click="LoadKardZaza"/>
                <Separator />
                <MenuItem Header="_Exit(退出)" Click="Exit"/>
            </MenuItem>
        </Menu>
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Properties" Height="25" VerticalAlignment="Top">
                <DockPanel>
                    <Grid DockPanel.Dock="Bottom" Width="auto" Height="30" VerticalAlignment="Bottom">
                        <Button x:Name="ConfirmPropertiesButton" Content="确认修改"  Width="80" Height="30" HorizontalAlignment="Right" Margin="0,0,90,0" Style="{DynamicResource {x:Static adonisUi:Styles.AccentButton} }" Click="ConfirmProperties"/>
                        <Button x:Name="ReloadPropertiesButton" Content="重载文件"  Width="80" Height="30" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Click="ReloadProperties"/>
                    </Grid>
                    <Grid DockPanel.Dock="Top" >
                        <DataGrid Name="properties" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="是否使用" Binding="{Binding IsActive}" />
                                <DataGridTextColumn Header="名称" Binding="{Binding K,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                <DataGridTextColumn Header="值" Binding="{Binding V, Mode=TwoWay,UpdateSourceTrigger=LostFocus}" IsReadOnly="false"/>
                                <DataGridTextColumn Header="类型" Binding="{Binding T,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />
                                <DataGridTextColumn Header="描述" Binding="{Binding Desc,Mode=TwoWay}" IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Exports" />
            <TabItem Header="ByteCodes" />
        </TabControl>
    </DockPanel>
</adonisControls:AdonisWindow>
