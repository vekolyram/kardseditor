<adonisControls:AdonisWindow  
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI" x:Class="kardseditor.setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kardseditor"
        mc:Ignorable="d"
        Title="setting" Height="450" Width="521">
    <DockPanel>
        <Grid Margin="10" DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="映射位置：" Grid.Row="0" Grid.Column="0"/>
            <TextBox x:Name="mappingPathInput" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="1" />
            <Button Grid.Row="0" Grid.Column="3" Content="..." Margin="10,0,0,0" Click="ChooseMap"/>
            <Label Content="导出位置：" Grid.Row="1" Grid.Column="0" Margin="0,10,0,0"/>
            <TextBox x:Name="assetPathInput" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="1" Margin="0,10,0,0" />
            <Button Grid.Row="1" Grid.Column="3" Content="..." Margin="10,10,0,0" Click="ChooseExport"/>
            <Label Content="版本：" Grid.Row="2" Grid.Column="0" Margin="0,10,0,0"/>
            <ComboBox x:Name="ueverCombo" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="1" Margin="0,10,0,0" SelectedIndex="0" FontSize="20" FontStretch="UltraExpanded">
                <ComboBoxItem Content="空霸"/>
                <ComboBoxItem Content="国土" />
            </ComboBox>
        </Grid>
        <Grid DockPanel.Dock="Bottom" Width="auto" Height="auto" VerticalAlignment="Bottom" Margin="10">
            <Button Content="确认"  Width="80" Height="30" HorizontalAlignment="Right" Margin="0,0,90,0" Style="{DynamicResource {x:Static adonisUi:Styles.AccentButton} }" Click="Confirm"/>
            <Button Content="取消"  Width="80" Height="30" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Click="Cancel"/>
        </Grid>
    </DockPanel>
    <adonisControls:AdonisWindow.Style>
        <Style TargetType="adonisControls:AdonisWindow" BasedOn="{StaticResource {x:Type adonisControls:AdonisWindow}}" >
            <Setter Property="Title" Value="Settings" />
        </Style>
    </adonisControls:AdonisWindow.Style>
</adonisControls:AdonisWindow>
